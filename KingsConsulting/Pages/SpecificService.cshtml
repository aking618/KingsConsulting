@page
@model KingsConsulting.Pages.SpecificServiceModel
@{
}

<div class="row row-cols-1 row-cols-md-2 align-items-center mt-5 smooth-resize">
    <div class="col col-md-12 mb-5">
        <div class="display-5">
            @Model.serviceDetails.Title
        </div>
    </div>
    <div class="col">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                @for (var i = 0; i < Model.serviceDetails.imageUrls!.Length; i++)
                {
                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "")" aria-label="Slide @(i + 1)"></button>
                }
            </div>
            <div class="carousel-inner">
                @for (var i = 0; i < Model.serviceDetails.imageUrls!.Length; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "") ratio ratio-1x1">
                        <img src="@Model.serviceDetails.imageUrls[i]" class="d-block rounded img-fluid mx-auto" alt="...">
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="col p-3">
        <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" data-bs-tabs="tabs">
                        @for (var i = 0; i < Model.serviceDetails.categories!.Length; i++)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "")" data-bs-toggle="tab" href="#tab@(i)">@Model.serviceDetails.categories[i].Title</a>
                            </li>
                        }
                    </ul>
                </div>
                <form class="card-body tab-content">
                    @for (var i = 0; i < Model.serviceDetails.categories!.Length; i++)
                    {
                        <div class="tab-pane  @(i == 0 ? "active" : "")" id="tab@(i)">
                            <div class="col text-dark">
                                <p>$@Model.serviceDetails.categories[i].price</p>
                                <p>@Model.serviceDetails.categories[i].Title</p>
                                <p>@Model.serviceDetails.categories[i].Description</p>
                            </div>
                        </div>
                    }

                    <button class="btn btn-primary d-flex mx-auto" type="submit">PURCHASE</button>
                </form>
            </div>
    </div>
</div>

