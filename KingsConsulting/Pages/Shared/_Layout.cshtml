<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>King's Consulting</title>
    <link rel="preconnect" href="https://rsms.me/">
<link rel="stylesheet" href="https://rsms.me/inter/inter.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="css/animations.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/KingsConsulting.styles.css" asp-append-version="true"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">King's Consulting</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 animate-fade">
                        <li class="nav-item">
                            <a class="nav-link nav-links" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Contact">Contact</a>
                        </li>

                        @* Nav Icon to represent the current login state *@
                        <li class="flex-grow-1"></li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Account">
                                @* If the user is logged in, show the otter icon *@
                                @if (Context.Session.GetString("Email") == null || Context.Session.GetString("Email") == "")
                                {
                                    <span class="fa-solid fa-user fa-lg"></span>

                                }
                                else
                                {
                                    <span class="fa-solid fa-otter fa-lg"></span>
                                }
                            </a>

                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container text-light">
        <main role="main" class="pb-3">

            @* Logic to display a dismissable alert *@

            @if (TempData[KingsConsulting.Model.Constants.AlertSuccess] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @Html.Raw(@TempData[KingsConsulting.Model.Constants.AlertSuccess])
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData[KingsConsulting.Model.Constants.AlertDanger] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @Html.Raw(@TempData[KingsConsulting.Model.Constants.AlertDanger])
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData[KingsConsulting.Model.Constants.AlertWarning] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    @Html.Raw(@TempData[KingsConsulting.Model.Constants.AlertWarning])
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - King's Consulting - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    
    <script src="https://kit.fontawesome.com/2a8eb230ea.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&family=DM+Serif+Display&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>