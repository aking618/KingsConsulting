@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}

<div class="row justify-content-center">
    @* Header *@
    <div class="display-5 animate-fade mt-5 line-zero">About Us</div>
    <div class="row row-cols-1 row-cols-md-2 g-5 align-items-center mt-1">
        @* About Image *@
        <div class="col justify-content-center animate-slide-left">
            <img src="../images/about.jpg" class="rounded img-fluid mx-auto" />
        </div>
        @* About Text *@
        <div class="col animate-slide-right">
            <div class="row p-3">
                <div class="col">
                    <h2 class="display-6">Who We Are</h2>
                    <p>
                        We are a team of web developers, mobile developers, and experienced consultants who are passionate about helping businesses and individuals realize their vision and bring their ideas to life.
                    </p>
                </div>
            </div>
            <div class="row p-3">
                <a class="link" href="/Services">Check out Services!</a>
            </div>
        </div>
    </div>
    @* Video Section *@
    <h2 class="display-6 mb-3 animate-fade mt-5 animate-fade delay-1">Our Mission</h2>
    <div class="row ratio ratio-1x1 video-width-max m-3 animate-fade delay-2">
        <iframe src="https://www.youtube.com/embed/yeiYJ57DrH4" frameborder="0" allowfullscreen></iframe>
    </div>
</div>
